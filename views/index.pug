doctype html
html(lang="ko")
  head
    meta(charset="UTF-8")
    title Crawl
    script(src="https://code.jquery.com/jquery-3.1.1.min.js")
    script.
      $('document').ready(function() {
        $('#search').on('click', function() {
          var target = document.getElementById('url').value;
          
          $.ajax({
            type: 'GET',
            url: 'images',
            dataType: 'json',
            data: { url: target },
            success: function(data) {
              data.images.forEach(function(image) {
                $('#contents').append('<img src="' + image + '" width="300"/>');
              });
            }
          });
        });
      });
  body
    input#url(
      type="text",
      name="url",
      placeholder="URL"
    )
    button#search 검색
    #contents